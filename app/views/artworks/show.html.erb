
<% if @artwork.images.attached? %>
  <ul>
    <% @artwork.images.each do |image| %>
      <li><%= link_to image_tag(image.variant(resize: "200x200")), url_for(image) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No images submitted.</p>
<% end %>

<h1><%= @artwork.title %></h1>
<h3><%= @artwork.user.name %> - <%= @artwork.date.strftime("%B %Y") %></h3>

<p><%= simple_format(@artwork.description) %></p>
<p>Link: <%= link_to @artwork.url %></p>
