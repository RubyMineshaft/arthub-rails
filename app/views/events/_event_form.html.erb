<%= display_errors(@event) %>

<%= bootstrap_form_for @event do |f| %>

  <%# ROW 1 --- Title  %>
  <div class="form-row">
    <div class="col-12">
      <%= f.label "Event Title" %>
      <%= f.text_field :name, skip_label: true %>
    </div>
  </div>

  <%# ROW 2 --- Location Start_Time End_Time %>
  <div class="form-row">

    <%# COL 1 --- Location  %>
    <div class="col-5">
      <div class="form-row">
        <div class="col-12">
          <%= f.label "Location" %>
        </div>
      </div>

      <div class="form-row">


          <div class="col-3">
            <%= f.label :venue %>
          </div>
          <div class="col-9">
            <%= f.text_field :venue, skip_label: true %>
          </div>



        <%= f.fields_for :location do |location_form| %>

          <div class="form-group col-3">
            <%= f.label "Area", class: "col-form-label" %>
          </div>
          <div class="col-9">
            <%= location_form.text_field :area, skip_label: true %>
          </div>

          <div class="col-3">
            <%= f.label "City" %>
          </div>
          <div class="col-9">
            <%= location_form.select :city_id, City.all.collect { |c| [c.name, c.id] }, skip_label: true %>
          </div>
        <% end %>






      </div>
    </div>

    <div class="col">
      <div class="form-row">
        <div class="col-12">
          <%= f.label "Start Time" %>
        </div>
      </div>
      <div class="form-row">


        <div class="col-6">
          <%= f.label "Date" %>
          <%= f.date_select :start_time, start_year: Date.today.year, skip_label: true %>
        </div>
        <div class="col-6">
          <%= f.label "Time" %>
          <%= f.time_select :start_time, ampm: true, skip_label: true %>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="form-row">
        <div class="col-12">
          <%= f.label "End Time" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-6">
          <%= f.label "Date" %>
          <%= f.date_select :end_time, :skip_label => true %>
        </div>
        <div class="col-6">
          <%= f.label "Time" %>
          <%= f.time_select :end_time, ampm: true, skip_label: true %>
        </div>
      </div>
    </div>
  </div>

  <%= f.text_area :description, size: '80X90' %>

  <%= f.check_box :accepting_applications %>

  <br>

  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
