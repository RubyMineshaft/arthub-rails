<%= display_errors(@event) %>

<%= bootstrap_form_for @event do |f| %>

  <div class="form-row">
    <div class="col-12">
      <%= f.label "Event Title" %>
      <%= f.text_field :name, skip_label: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6">
      <div class="form-row">
        <div class="col-12">
          <%= f.label "Start Time" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-1"></div>
        <div class="col-5">
          <%= f.date_select :start_time, start_year: Date.today.year %>
        </div>
        <div class="col-5">
          <%= f.time_select :start_time, ampm: true %>
        </div>
        <div class="col-1"></div>
      </div>
    </div>
    <div class="col-6">
      <div class="form-row">
        <div class="col-12">
          <%= f.label "End Time" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-1"></div>
        <div class="col-5">
          <%= f.date_select :end_time %>
        </div>
        <div class="col-5">
          <%= f.time_select :end_time, ampm: true %>
        </div>
        <div class="col-1"></div>
      </div>
    </div>
  </div>
  <%= f.text_field :venue %>

  <%= f.fields_for :location do |location_form| %>
    <%= location_form.select :city_id, City.all.collect { |c| [c.name, c.id] } %>
    <%= location_form.text_field :area %>
  <% end %>

  <%= f.text_area :description, size: '80X90' %>

  <%= f.check_box :accepting_applications %>

  <br>

  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
