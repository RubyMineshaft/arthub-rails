<h1>Sign Up</h1>

<%= form_for @user do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <br><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %>

  <br><br>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <br><br>

  <%= f.label "Profile Photo" %>
  <%= f.file_field :avatar %>

  <br><br>

  <%= f.submit "Sign Up" %>



<% end %>
