<!DOCTYPE html>
<html>
  <head>
    <title>ArthubRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container bg-white fill">
      <% if logged_in? %>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">

          <a href="/" class="navbar-brand">
          <span class="nav-logo white-text">ArtHub</span></a>

          <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-links">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse justify-content-end" id="nav-links">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, :class => "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Events", events_path, :class => "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Profile", user_path(current_user), :class => "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log Out", logout_path, method: :delete, :class => "nav-link" %>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>

      <% if flash[:success] %>
        <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
      <% end %>

      <div id="js-container" class="container my-2">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
